# Show rofi menu
SELECTED=$(echo "$EMOJIS" | rofi -dmenu -p "Emoji" -theme ~/.config/rofi/scripts/emoji/style.rasi | cut -d ' ' -f1)

if [[ -n "$SELECTED" ]]; then
    # Copy to clipboard
    echo -n "$SELECTED" | wl-copy
    notify-send "Emoji Copied" "$SELECTED" -t 1500
fi
